<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recipe_background"
    tools:context=".Main_menu">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="193dp"
        android:layout_height="59dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="571dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/type_recipe"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/type_dish" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toEndOf="@+id/textInputLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.147" />

    <RadioGroup
        android:id="@+id/radiogroupfilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.098" />

    <RadioButton
        android:id="@+id/time_less_30"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_launcher_background"
        android:text="@string/Ingredient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.315"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/time_30_to_90"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:background="@drawable/ic_launcher_background"
        android:text="@string/Time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_less_30"
        app:layout_constraintVertical_bias="0.059" />

    <RadioButton
        android:id="@+id/time_more_90"
        android:layout_width="120dp"
        android:layout_height="51dp"
        android:background="@drawable/ic_launcher_background"
        android:text="@string/Calories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_30_to_90"
        app:layout_constraintVertical_bias="0.055" />

    <ImageButton
        android:id="@+id/btn_recipe_mushroom"
        android:layout_width="140dp"
        android:layout_height="132dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_more_90"
        app:layout_constraintVertical_bias="0.153"
        app:srcCompat="@drawable/mushooms_image" />

    <ImageButton
        android:id="@+id/btn_recipe_dumplings"
        android:layout_width="140dp"
        android:layout_height="132dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_recipe_mushroom"
        app:layout_constraintVertical_bias="0.385"
        app:srcCompat="@drawable/dumpligs" />

    <ImageButton
        android:id="@+id/btn_recipe_pasta"
        android:layout_width="140dp"
        android:layout_height="132dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toEndOf="@+id/btn_recipe_mushroom"
        app:layout_constraintTop_toBottomOf="@+id/time_more_90"
        app:layout_constraintVertical_bias="0.154"
        app:srcCompat="@drawable/pasta" />

    <ImageButton
        android:id="@+id/btn_recipe_sushi"
        android:layout_width="140dp"
        android:layout_height="132dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toEndOf="@+id/btn_recipe_mushroom"
        app:layout_constraintTop_toBottomOf="@+id/btn_recipe_pasta"
        app:layout_constraintVertical_bias="0.385"
        app:srcCompat="@drawable/sushi" />


</androidx.constraintlayout.widget.ConstraintLayout>